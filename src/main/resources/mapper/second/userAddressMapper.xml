<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="priv.zsk.second.mapper.UserAddressMapper">
    <resultMap id="userAddressList" type="priv.zsk.second.entity.UserAddressEntity">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
    </resultMap>
    <!--查询用户信息 -->
    <select id="findUserAddressList" parameterType="integer" resultMap="userAddressList">
        select * from user_address
        <where>
            <if test="value != null"> and user_id = #{value}</if>
        </where>
    </select>
</mapper>