<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.zsk.springbootdemo.mapper.SecurityResourceMapper">
    <select id="findSecurityResourceList" parameterType="priv.zsk.springbootdemo.entity.SecurityResource" resultType="priv.zsk.springbootdemo.entity.SecurityResource">
        select * from admin_security_resource
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
    </select>
</mapper>